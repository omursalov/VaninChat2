<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VaninChat2.DiscussionPage">

    <ScrollView>
        <VerticalStackLayout
    Padding="30,0"
    Spacing="25">
            <Editor x:Name="EDITOR_MESSAGE" Placeholder="ваше сообщение" AutoSize="TextChanges" HeightRequest="100" />

            <Button
        x:Name="SEND_BTN"
        Text="отправить" 
        Clicked="SendAsync"
        HorizontalOptions="Fill"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>